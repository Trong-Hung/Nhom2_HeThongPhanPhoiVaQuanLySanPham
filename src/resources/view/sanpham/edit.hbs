<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Cập nhật sản phẩm</h4>
        </div>
        <div class="card-body">
          <form method="POST" action="/sanpham/{{sanpham._id}}?_method=PUT" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PUT" />

            <div class="mb-3">
              <label for="name" class="form-label">Tên sản phẩm</label>
              <input type="text" id="name" name="name" value="{{sanpham.name}}" class="form-control" required />
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Mô tả</label>
              <textarea id="description" name="description" class="form-control" rows="3" required>{{sanpham.description}}</textarea>
            </div>

            <div class="mb-3">
              <label for="price" class="form-label">Giá</label>
              <input type="number" id="price" name="price" value="{{sanpham.price}}" class="form-control" required />
            </div>

            <div class="mb-3">
              <label for="image" class="form-label">Chọn ảnh minh họa</label>
              <input type="file" id="image" name="image" class="form-control" />
              {{#if sanpham.image}}
                <div class="mt-2">
                  <img src="/uploads/{{sanpham.image}}" alt="Ảnh sản phẩm" style="max-width: 120px; border-radius: 6px;">
                </div>
              {{/if}}
            </div>

            <button type="submit" class="btn btn-primary w-100">Cập nhật sản phẩm</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>