<div class="container mt-4">
  <h3 class="mb-4">Chi tiết phiếu điều chuyển</h3>

  <div class="card shadow-sm p-3 mb-4">
    <h4>Thông tin phiếu điều chuyển</h4>
    <p><strong>Mã phiếu:</strong> {{transfer.transferId}}</p>
    <p><strong>Kho nguồn:</strong> {{transfer.sourceWarehouse.name}}</p>
    <p><strong>Kho đích:</strong> {{transfer.destinationWarehouse.name}}</p>
    <p><strong>Shipper:</strong> {{#if transfer.assignedShipper}}{{transfer.assignedShipper.name}}{{else}}Chưa gán{{/if}}</p>
    <p><strong>Trạng thái:</strong> {{transfer.status}}</p>
  </div>

  <div class="card shadow-sm p-3 mb-4">
    <h4>Danh sách sản phẩm</h4>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Tên sản phẩm</th>
          <th>SKU</th>
          <th>Số lượng</th>
        </tr>
      </thead>
      <tbody>
        {{#each transfer.items}}
          <tr>
            <td>{{this.productId.name}}</td>
            <td>{{this.productId.sku}}</td>
            <td>{{this.quantity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="card shadow-sm p-3 mb-4">
    <h4>Gán shipper</h4>
    <form action="/admin/transfers/{{transfer._id}}/assign-shipper" method="POST">
      <select name="shipperId" class="form-control" required>
        <option value="">-- Chọn shipper --</option>
        {{#each shippers}}
          <option value="{{this._id}}">{{this.name}} ({{this.region}})</option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-primary mt-3">Gán shipper</button>
    </form>
  </div>
</div>