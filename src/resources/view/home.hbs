{{> banner-carousel banners=banners}}
<div class="container">
  {{#if keyword}}
    <h2>Kết quả tìm kiếm cho: "{{keyword}}"</h2>
    {{#unless sanphams.length}}
      <p>Không tìm thấy sản phẩm phù hợp.</p>
    {{/unless}}
  {{/if}}
</div>
<!-- ...phần danh sách sản phẩm giữ nguyên... -->
<div class="container">
  {{#if message}}
    <div id="alert-message" class="alert alert-success text-center" role="alert" style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); z-index: 9999;">
      {{message}}
    </div>
    <script>
      setTimeout(function() {
        var alert = document.getElementById('alert-message');
        if(alert) alert.style.display = 'none';
      }, 5000);
    </script>
  {{/if}}
</div>
<div class="mt-4">
  <h1>Danh sách sản phẩm</h1>
  <div class="row">
    {{#each sanphams}}
      <div class="col-sm-6 col-lg-3 d-flex">
        <div class="card card-sanpham-item flex-fill">
          <a href="/sanpham/{{this.slug}}">
            <img class="card-img-top" src="{{this.image}}" alt="Ảnh minh họa">
          </a>
          <div class="card-body d-flex flex-column">
            <a href="/sanpham/{{this.slug}}">
              <h5 class="card-title text-primary product-title">{{this.name}}</h5>
            </a>
            <p class="card-text mt-auto mb-2 font-weight-bold">{{formatCurrency this.price}}</p>
            <form action="/cart/add/{{this._id}}" method="POST">
              <button type="submit" class="btn btn-primary btn-block">Thêm vào giỏ</button>
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
