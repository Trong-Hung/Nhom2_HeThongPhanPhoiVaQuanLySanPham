          <a href="/sanpham/{{this.slug}}">
            <img 
              class="card-img-top" 
              src="{{this.image}}" 
              alt="{{this.name}}" 
              style="width: 100%; height: 400px; object-fit: cover;"
            >
          </a>
          <div class="card-body">
            <a href="/sanpham/{{this.slug}}" class="text-decoration-none text-dark">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text text-danger fw-bold">{{this.price}}.000 VNĐ</p>
            <form action="/cart/add/{{this._id}}" method="POST">
              <form action="/cart/add/{{this._id}}" method="POST">
                 <button type="submit" class="btn btn-primary btn-sm">Thêm vào giỏ</button>
