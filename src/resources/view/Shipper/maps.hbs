    <div id="map"></div>

    <script>
    console.log("ğŸ“Œ Dá»¯ liá»‡u tuyáº¿n Ä‘Æ°á»ng nháº­n tá»« controller:", "{{{routePath}}}");

    var map = new mapboxgl.Map({
