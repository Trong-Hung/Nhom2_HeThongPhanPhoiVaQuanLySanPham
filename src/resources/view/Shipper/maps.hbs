    var polylineString = "{{{routePath}}}";

    if (polylineString) {
        try {
            var polylinePoints = polyline.decode(polylineString);

            if (!polylinePoints || polylinePoints.length === 0) {
                throw new Error("âŒ KhÃ´ng thá»ƒ giáº£i mÃ£ polyline!");
            }

            var routeGeoJSON = {
