<div class="container mt-4">
  <h3 class="mb-4">🚚 Đơn hàng đang vận chuyển</h3>

  {{#if orders.length}}
    <div class="row">
      {{#each orders}}
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title">🆔 Mã đơn: 
                <a href="/shipper/order/{{this._id}}" class="text-decoration-none">{{this._id}}</a>
              </h5>

              <p class="mb-1">
                <strong>📦 Kho xuất hàng:</strong><br>
                {{#if this.warehouseId}}
                  {{this.warehouseId.name}}
                {{else}}
                  <span class="text-danger">❌ Chưa xác định</span>
                {{/if}}
              </p>

              <p class="mb-1">
                <strong>📍 Địa chỉ kho:</strong><br>
                {{#if this.warehouseId}}
                  {{this.warehouseId.address}}
                {{else}}
                  <span class="text-danger">❌ Chưa xác định</span>
                {{/if}}
              </p>

              <p class="mb-1">
                <strong>🚚 Giao đến:</strong><br> {{this.address}}
              </p>

              <p class="mb-3">
                <strong>🚀 Trạng thái:</strong><br> {{this.status}}
              </p>

              <a href="/shipper/maps/{{this._id}}" class="btn btn-sm btn-outline-primary w-100">Chỉ đường</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="text-muted">🚫 Hiện chưa có đơn hàng nào đang vận chuyển.</p>
  {{/if}}
</div>
