<div class="container py-5">
  <h2 class="text-center mb-4">Chào mừng Shipper {{user.username}}!</h2>

  {{#if warehouse}}
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-building"></i>
          Thông tin kho được phân công</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p><strong>Tên kho:</strong> {{warehouse.name}}</p>
            <p><strong>Địa chỉ:</strong> {{warehouse.address}}</p>
            <p><strong>Loại kho:</strong>
              {{#if (eq warehouse.type "regional")}}
                <span class="badge bg-success">Kho vùng</span>
              {{else}}
                <span class="badge bg-info">Kho trung tâm</span>
              {{/if}}
            </p>
          </div>
          <div class="col-md-6">
            <p><strong>Vùng:</strong> {{warehouse.region}}</p>
            <p><strong>Tỉnh/TP:</strong> {{warehouse.province}}</p>
            <p><strong>Quận/Huyện:</strong> {{warehouse.district}}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card border-warning">
          <div class="card-body text-center">
            <i class="bi bi-clock-history text-warning display-5 mb-2"></i>
            <h5 class="card-title">{{pendingCount}}</h5>
            <p class="card-text text-muted">Đơn hàng chờ giao</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card border-primary">
          <div class="card-body text-center">
            <i class="bi bi-truck text-primary display-5 mb-2"></i>
            <h5 class="card-title">{{activeCount}}</h5>
            <p class="card-text text-muted">Đang vận chuyển</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card border-success">
          <div class="card-body text-center">
            <i class="bi bi-check2-circle text-success display-5 mb-2"></i>
            <h5 class="card-title">{{deliveredCount}}</h5>
            <p class="card-text text-muted">Đã giao thành công</p>
          </div>
        </div>
      </div>
    </div>
  {{/if}}

  <p class="text-center mb-5">Chọn chức năng để quản lý đơn hàng của bạn:</p>
  <div class="row justify-content-center g-4">
    <div class="col-md-4">
      <a href="/shipper/dang_sap_xep" class="text-decoration-none">
        <div class="card shadow h-100 text-center border-0 hover-shadow">
          <div class="card-body py-4">
            <div class="mb-3">
              <i class="bi bi-list-task display-4 text-warning"></i>
            </div>
            <h5 class="card-title mb-2">Đơn hàng đang sắp xếp</h5>
            <p class="card-text text-muted">Xem và nhận các đơn hàng mới được
              phân công.</p>
          </div>
        </div>
      </a>
    </div>
    <div class="col-md-4">
      <a href="/shipper/dang_van_chuyen" class="text-decoration-none">
        <div class="card shadow h-100 text-center border-0 hover-shadow">
          <div class="card-body py-4">
            <div class="mb-3">
              <i class="bi bi-truck display-4 text-primary"></i>
            </div>
            <h5 class="card-title mb-2">Đơn hàng đang vận chuyển</h5>
            <p class="card-text text-muted">Quản lý các đơn hàng bạn đang giao
              cho khách.</p>
          </div>
        </div>
      </a>
    </div>
    <div class="col-md-4">
      <a href="/shipper/da-giao" class="text-decoration-none">
        <div class="card shadow h-100 text-center border-0 hover-shadow">
          <div class="card-body py-4">
            <div class="mb-3">
              <i class="bi bi-check2-circle display-4 text-success"></i>
            </div>
            <h5 class="card-title mb-2">Đơn hàng đã giao</h5>
            <p class="card-text text-muted">Xem lại lịch sử các đơn hàng đã giao
              thành công.</p>
          </div>
        </div>
      </a>
    </div>
  </div>
</div>
