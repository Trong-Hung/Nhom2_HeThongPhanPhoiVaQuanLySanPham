<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Chat - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .chat-list {
            height: 70vh;
            overflow-y: auto;
        }
        .chat-item {
            border-bottom: 1px solid #dee2e6;
            padding: 15px;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        .chat-item:hover {
            background-color: #f8f9fa;
        }
        .chat-item.unread {
            background-color: #e3f2fd;
            border-left: 4px solid #2196F3;
        }
        .user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            margin-right: 15px;
        }
        .chat-preview {
            flex: 1;
        }
        .last-message {
            color: #6c757d;
            font-size: 14px;
            margin-top: 5px;
        }
        .message-time {
            font-size: 12px;
            color: #6c757d;
        }
        .unread-badge {
            background: #dc3545;
            color: white;
            border-radius: 50%;
            padding: 2px 8px;
            font-size: 12px;
            min-width: 20px;
            text-align: center;
        }
        .role-badge {
            font-size: 11px;
            padding: 2px 6px;
        }
        .empty-state {
            text-align: center;
            padding: 50px 20px;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <!-- Header -->
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <a href="/admin" class="text-white me-3">
                                    <i class="fas fa-arrow-left"></i>
                                </a>
                                <h5 class="mb-0">
                                    <i class="fas fa-comments me-2"></i>
                                    Quản lý Chat
                                </h5>
                            </div>
                            <div>
                                <button class="btn btn-outline-light btn-sm" onclick="refreshChats()">
                                    <i class="fas fa-sync-alt"></i> Làm mới
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Chat List -->
                    <div class="card-body p-0">
                        {{#if chatRooms.length}}
                        <div class="chat-list">
                            {{#each chatRooms}}
                            <div class="chat-item {{#if unreadCount}}unread{{/if}}" onclick="openChat('{{otherUser._id}}')">
                                <div class="d-flex align-items-center">
                                    <!-- User Avatar -->
                                    <div class="user-avatar {{#if (eq otherUser.role "admin")}}bg-danger text-white{{else if (eq otherUser.role "shipper")}}bg-warning text-dark{{else}}bg-info text-white{{/if}}">
                                        {{#if (eq otherUser.role "admin")}}
                                            <i class="fas fa-shield-alt"></i>
                                        {{else if (eq otherUser.role "shipper")}}
                                            <i class="fas fa-truck"></i>
                                        {{else}}
                                            <i class="fas fa-user"></i>
                                        {{/if}}
                                    </div>

                                    <!-- Chat Preview -->
                                    <div class="chat-preview">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1 fw-bold">{{otherUser.name}}</h6>
                                                <span class="role-badge badge {{#if (eq otherUser.role "admin")}}bg-danger{{else if (eq otherUser.role "shipper")}}bg-warning text-dark{{else}}bg-info{{/if}}">
                                                    {{#if (eq otherUser.role "admin")}}Admin{{else if (eq otherUser.role "shipper")}}Shipper{{else}}Khách hàng{{/if}}
                                                </span>
                                            </div>
                                            <div class="text-end">
                                                <div class="message-time">
                                                    {{formatDate lastMessageTime "DD/MM/YYYY HH:mm"}}
                                                </div>
                                                {{#if unreadCount}}
                                                <span class="unread-badge mt-1">{{unreadCount}}</span>
                                                {{/if}}
                                            </div>
                                        </div>
                                        <div class="last-message">
                                            {{#if lastMessage}}
                                                {{#if (gt lastMessage.length 50)}}
                                                    {{substring lastMessage 0 50}}...
                                                {{else}}
                                                    {{lastMessage}}
                                                {{/if}}
                                            {{else}}
                                                <em>Chưa có tin nhắn</em>
                                            {{/if}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        {{else}}
                        <div class="empty-state">
                            <i class="fas fa-comments fa-4x mb-3"></i>
                            <h5>Chưa có cuộc trò chuyện nào</h5>
                            <p>Các cuộc trò chuyện sẽ xuất hiện ở đây khi có người dùng gửi tin nhắn.</p>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Mở chat với user cụ thể
        function openChat(userId) {
            window.location.href = `/chat/admin/${userId}`;
        }

        // Làm mới danh sách chat
        function refreshChats() {
            location.reload();
        }

        // Polling để cập nhật số tin nhắn chưa đọc
        async function pollUnreadCount() {
            try {
                const response = await fetch('/chat/unread-count');
                const data = await response.json();
                
                if (data.success && data.data.unreadCount > 0) {
                    // Có tin nhắn mới, làm mới trang
                    location.reload();
                }
            } catch (error) {
                console.error('Error polling unread count:', error);
            }
        }

        // Khởi tạo polling mỗi 10 giây
        document.addEventListener('DOMContentLoaded', function() {
            setInterval(pollUnreadCount, 10000);
        });

        // Helpers cho Handlebars (nếu cần)
        if (typeof Handlebars !== 'undefined') {
            Handlebars.registerHelper('substring', function(str, start, length) {
                return str ? str.substring(start, start + length) : '';
            });
        }
    </script>
</body>
</html>