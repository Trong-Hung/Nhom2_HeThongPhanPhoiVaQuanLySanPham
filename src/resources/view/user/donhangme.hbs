<h2>Đơn hàng của bạn</h2>

<ul class="nav nav-tabs" id="orderTabs" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="pending-tab" data-bs-toggle="tab" href="#pending" role="tab">Chờ xác nhận & Đang sắp xếp</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="shipping-tab" data-bs-toggle="tab" href="#shipping" role="tab">Đang vận chuyển</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="delivered-tab" data-bs-toggle="tab" href="#delivered" role="tab">Đã giao/Hoàn thành</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="canceled-tab" data-bs-toggle="tab" href="#canceled" role="tab">Đã hủy</a>
  </li>
</ul>
<div class="tab-content mt-3">
  <div class="tab-pane fade show active" id="pending" role="tabpanel">
    {{> orderTable orders=ordersPending}}
  </div>
  <div class="tab-pane fade" id="shipping" role="tabpanel">
    {{> orderTable orders=ordersShipping}}
  </div>
  <div class="tab-pane fade" id="delivered" role="tabpanel">
    {{> orderTable orders=ordersDelivered}}
  </div>
  <div class="tab-pane fade" id="canceled" role="tabpanel">
    {{> orderTable orders=ordersCanceled}}
  </div>
</div>

<!-- Nếu layout chưa có, thêm Bootstrap JS bundle vào cuối trang -->
