{{#if orders.length}}
  <div class="table-responsive shadow-sm rounded">
    <table class="table table-striped table-hover align-middle mb-0">
      <thead class="thead-dark">
        <tr>
          <th scope="col" style="width: 50px;">#</th>
          <th scope="col" style="min-width: 150px;">Mã đơn hàng</th>
          <th scope="col" style="min-width: 150px;">Trạng thái</th>
          <th scope="col" style="min-width: 180px;">Ngày đặt hàng</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
          <tr>
            <th scope="row">{{inc @index}}</th>
            <td>
              <a href="/donhang/{{this._id}}" class="text-decoration-none">
                {{this._id}}
              </a>
            </td>
            <td>
              <span class="badge {{statusBadgeClass this.status}}">
                {{this.status}}
              </span>
            </td>
            <td>{{formatDate this.createdAt}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <div class="alert alert-info" role="alert">
    Không có đơn hàng nào.
  </div>
{{/if}}
