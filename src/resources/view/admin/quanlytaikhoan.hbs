      {{#each users}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="/admin/edit/{{this._id}}" class="text-decoration-none fw-semibold">
          {{this.name}} <small class="text-muted">- {{this.email}}</small>
